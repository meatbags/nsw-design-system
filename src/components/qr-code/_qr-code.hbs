<div class="nsw-qr-code js-qr-code" id="{{id}}" aria-labelledby="{{id}}-title">
  <div class="nsw-qr-code__content">
    <div class="nsw-qr-code__title">
      <h2 id="{{id}}-title">{{#if title}}{{title}}{{else}}QR Code{{/if}}</h2>
    </div>{{#if copy}}
    <div class="nsw-card__copy">
      <p>{{copy}}</p>
    </div>{{/if}}
    <div class="nsw-qr-code__image-wrapper">
      <div class="nsw-qr-code__status">{{#if status_message}}{{status_message}}{{else}}Generating code.{{/if}}</div>
    </div>
    <div class="nsw-qr-code__url">
      <a href="{{#if link}}{{link}}{{/if}}" target="_blank">
        <span>{{#if link}}{{link}}{{/if}}</span>
        <span class="material-icons nsw-material-icons" title="(opens in new window)">open_in_new</span>
      </a>
    </div>
  </div>
</div>
